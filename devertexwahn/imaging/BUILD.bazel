cc_library(
    name = "color",
    srcs = ["color.cpp"],
    hdrs = ["color.h"],
    deps = [
        "//core:namespace",
        "//math:util",
    ],
)

cc_test(
    name = "color_test",
    srcs = [
        "color_test.cpp",
    ],
    deps = [
        "//imaging:color",
        "@com_google_googletest//:gtest_main",
    ],
)

cc_library(
    name = "image",
    srcs = ["image.cpp"],
    hdrs = ["image.h"],
    deps = [
        ":color",
        "//math:point",
        "//math:vector",
    ],
)

cc_test(
    name = "image_test",
    srcs = [
        "image_test.cpp",
    ],
    deps = [
        "//imaging/io",
        "@com_google_googletest//:gtest_main",
    ],
)

cc_library(
    name = "iqa",
    srcs = ["iqa/iqa.cpp"],
