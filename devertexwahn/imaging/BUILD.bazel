    deps = [
        "//core:reference_counted",
        "//imaging:image",
    ],
)

cc_test(
    name = "iqa_test",
    srcs = [
        "iqa/iqa_test.cpp",
    ],
    deps = [
        ":iqa",
        "@com_google_googletest//:gtest_main",
    ],
)
