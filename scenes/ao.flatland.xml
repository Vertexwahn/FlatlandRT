<scene>
    <camera>
        <film width="600" height="700" filename="ao.svg"></film>

        <transform>
            <lookAt origin="100, 525" target="300, 325" />
        </transform>
    </camera>

    <integrator type="ambient_occlusion" />

    <shape type="rectangle">
        <float name="width" value="400" />
        <float name="height" value="50" />

        <transform>
            <rotate_z angle="45" />
            <translate x="300" y="300" />
        </transform>

        <material>
            <color name="stroke_color" value="0.0, 0.682, 0.937" />
            <float name="stroke_width" value="3" />
            <color name="fill_color" value="1, 1, 1" />
        </material>
    </shape>
</scene>
